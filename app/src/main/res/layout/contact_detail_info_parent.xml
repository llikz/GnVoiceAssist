<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingBottom="5dp"
	android:paddingTop="5dp">

<LinearLayout
	android:id="@+id/custom_panel"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/button"
	android:gravity="center"
	android:orientation="vertical">
	
	<TextView
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="@dimen/contact_name_height"
		android:textColor="@color/sms_content_name_color"
		android:textSize="@dimen/main_content_text_size"
		android:gravity="center_vertical"/>

	<include layout="@layout/list_item_line" />
	
	<RadioGroup
		android:id="@+id/contacts_group"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:visibility="gone" />
</LinearLayout>
</LinearLayout>